<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Id"
        android:textSize="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edTitulo"
        />

    <EditText
        android:id="@+id/edTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Titulo"
        android:textSize="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edId"
        app:layout_constraintBottom_toTopOf="@id/edAnio"
        />
    <EditText
        android:id="@+id/edAnio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Año"
        android:textSize="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edTitulo"
        app:layout_constraintBottom_toTopOf="@id/edimdb"
        />
    <EditText
        android:id="@+id/edimdb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="imdbID"
        android:textSize="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edAnio"
        app:layout_constraintBottom_toTopOf="@id/edTipo"
        />
    <EditText
        android:id="@+id/edTipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tipo"
        android:textSize="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edimdb"
        app:layout_constraintBottom_toTopOf="@id/edPoster"
        />
    <EditText
        android:id="@+id/edPoster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Poster"
        android:textSize="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edTipo"
        app:layout_constraintBottom_toTopOf="@id/edPais"
        />
    <EditText
        android:id="@+id/edPais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="País"
        android:textSize="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edPoster"
        app:layout_constraintBottom_toTopOf="@+id/edGenero"
        />
    <EditText
        android:id="@+id/edGenero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Género"
        android:textSize="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edPais"
        app:layout_constraintBottom_toTopOf="@id/btnGuardar"
        />
    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:text="Guardar"
        android:textSize="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edGenero"

        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RVPelis"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/pelis"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnGuardar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        />

</androidx.constraintlayout.widget.ConstraintLayout>